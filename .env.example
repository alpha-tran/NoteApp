# MongoDB
MONGO_ROOT_PASSWORD=your_mongo_password
MONGODB_URI=mongodb://admin:your_mongo_password@mongodb:27017/noteapp?authSource=admin

# PostgreSQL
POSTGRES_PASSWORD=your_postgres_password

# JWT and Security
JWT_SECRET_KEY=your-jwt-secret-key
SECRET_KEY=your-secret-key

# Application Settings
ENVIRONMENT=development
DEBUG=True
HOST=127.0.0.1
PORT=8000
WORKERS=1
LOG_LEVEL=INFO
API_V1_STR=/api/v1

# Rate Limiting
RATE_LIMIT_PER_MINUTE='{"default":100,"auth":20,"user":200}'

# CORS Settings
CORS_ORIGINS='["http://localhost:3000"]'

# Session Settings
SESSION_EXPIRE_MINUTES=60

# SSL/TLS Settings (for production)
USE_HTTPS=false
SSL_CERTFILE=
SSL_KEYFILE=

# Database Settings
MONGODB_DB_NAME=noteapp 